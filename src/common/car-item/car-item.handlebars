<div class="item">
	<div class="item-img">
		<img src="{{img}}" alt="car image"></div>
	<div class="item-content">
		<div class="item-header">
			{{title}}
			<div class="item-like" data-item-id="{{carId}}"></div>
		</div>
		<div class="item-price">
			<span class="price">{{price.usd}} $ / {{price.uah}}</span> грн <span class="cource">по курсу</span>
		</div>
		<div class="item-date">
			{{date}}
		</div>
		<div class="item-description">
			{{description}}
		</div>
		<div class="item-parameters-row ">
			<div class="item-parameters">
				{{race}} тис. км
			</div>
			<div class="item-parameters item-motor">
				{{fuel}}, {{volume}}.
			</div>
			<div class="item-parameters item-transmission">
				{{gearBox}}
			</div>
		</div>
		<div>
			<div class="item-tel">{{phone}} / {{city}}</div>
			<div class="item-add-note">Добавить заметку</div>
		</div>


	</div>
</div>